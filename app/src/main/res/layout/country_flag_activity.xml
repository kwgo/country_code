<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/context_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boardColor"
    android:orientation="vertical"
    android:paddingStart="5dp"
    android:paddingTop="1dp"
    android:paddingEnd="5dp"
    android:paddingBottom="1dp"
    tools:context=".CountryFlagActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingTop="0dp"
        android:paddingBottom="0dp">

        <TextView
            android:id="@+id/flag_ratio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:paddingBottom="4dp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/detailColor"
            android:textSize="12sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/country_flag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="1dp">

            <ImageView
                android:id="@+id/country_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingStart="4dp"
                android:paddingEnd="2dp"
                android:src="@drawable/image_back" />

            <ImageView
                android:id="@+id/country_rotate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingStart="4dp"
                android:paddingEnd="2dp"
                android:src="@drawable/image_rotate" />

            <ImageView
                android:id="@+id/country_flip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingStart="4dp"
                android:paddingEnd="2dp"
                android:src="@drawable/image_flip" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
