<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    style="@style/word_widget_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/widget_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginTop="-2dp"
        android:gravity="start|center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/widget_padding_space">

            <ImageView
                android:id="@+id/widget_image"
                android:layout_width="@dimen/widget_image_width"
                android:layout_height="@dimen/widget_image_height"
                android:layout_gravity="top|start"
                android:layout_marginTop="@dimen/widget_image_margin_top"
                android:layout_marginEnd="@dimen/widget_image_margin_end"
                android:contentDescription="@null"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:gravity="center_vertical|start"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/widget_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:alpha="0.85"
                    android:contentDescription="@null"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textAppearance="@style/widget_title_style" />

                <TextView
                    android:id="@+id/widget_marker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:contentDescription="@null"
                    android:ellipsize="end"
                    android:gravity="top"
                    android:singleLine="true"
                    android:textAppearance="@style/widget_marker_style"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/widget_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/widget_detail_margin_start"
            android:contentDescription="@null"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAppearance="@style/widget_detail_style" />

    </LinearLayout>

</LinearLayout>
