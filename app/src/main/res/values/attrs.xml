<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RoundImageView">
        <attr name="type"/>
        <attr name="crop_type"/>
        <attr name="corner_radius"/>
        <attr name="top_left"/>
        <attr name="top_right"/>
        <attr name="bottom_left"/>
        <attr name="bottom_right"/>
    </declare-styleable>

    <attr name="corner_radius" format="dimension"/>
    <attr name="type">
        <enum name="circle" value="0"/>
        <enum name="round" value="1"/>
    </attr>
    <attr name="crop_type">
        <enum name="crop_top" value="1"/>
        <enum name="crop_bottom" value="-1"/>
        <enum name="fit" value="0"/>
    </attr>

    <attr name="top_left" format="boolean"/>
    <attr name="top_right" format="boolean"/>
    <attr name="bottom_left" format="boolean"/>
    <attr name="bottom_right" format="boolean"/>

</resources>